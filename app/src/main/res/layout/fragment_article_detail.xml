<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_vertical"
        android:paddingLeft="@dimen/margin_horizontal"
        android:paddingRight="@dimen/margin_horizontal"
        android:paddingTop="@dimen/margin_vertical">

        <TextView
            android:id="@+id/article_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/sample_title"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/article_detail_date_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_date_author"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"/>

        <TextView
            android:id="@+id/article_detail_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vertical"
            android:clickable="true"
            android:text="@string/view_full_article"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Holo.Small"
            android:textColor="?android:textColorLink"
            />


        <TextView
            android:id="@+id/article_detail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/sample_summary"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textColor="?android:textColorSecondary"
            android:textColorLink="?android:textColorLink"
            />

        <ProgressBar
            android:id="@+id/article_detail_progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"/>

    </LinearLayout>
</ScrollView>
